   process.exit(1)

sqlitejs = './dist/sqlite.min.js'
postgresjs = './dist/postgres.min.js'

copyFile = (src, dest) ->
  console.log "Copying #{src} to #{dest}"
  fs.copy(src, dest, force: true)

