#!/usr/bin/env coffee

fs = require 'fs-sync'
_ = require 'underscore'
path = require 'path'

android = process.env.FULCRUM_ANDROID
ios     = process.env.FULCRUM_IOS
web     = process.env.FULCRUM_WEB

if not android and not ios and not web and not site
   console.error """
   You must set one of:
   FULCRUM_ANDROID
   FULCRUM_IOS
   FULCRUM_WEB
